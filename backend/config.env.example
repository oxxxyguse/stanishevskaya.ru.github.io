# Environment Configuration for TechStore Backend

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/techstore
MONGODB_URI_PROD=mongodb://your-production-mongodb-uri

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
LOGIN_RATE_LIMIT_MAX_REQUESTS=3

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=./uploads

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@techstore.com

# 1C Integration Configuration
ONE_C_BASE_URL=http://your-1c-server.com
ONE_C_USERNAME=your-username
ONE_C_PASSWORD=your-password
ONE_C_DATABASE=your-database

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:8000
CORS_CREDENTIALS=true

# Compression Configuration
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# API Keys (for external services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
YANDEX_MAPS_API_KEY=your-yandex-maps-api-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Development Configuration
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true
